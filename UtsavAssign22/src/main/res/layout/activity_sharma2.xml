<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SharmaActivity2"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/utsavHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:fontFamily="@font/varela_round"
        android:gravity="center"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/pizzaTypeTag"
        android:textSize="30sp"
        android:textColor="#000000"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/utsavPizzaTypeRdGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/utsavCheese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pizzaType1"
                />
            <RadioButton
                android:id="@+id/utsavVeggie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pizzaType2"
                />
            <RadioButton
                android:id="@+id/utsavPeppperoni"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pizzaType3"
                />

            <RadioButton
                android:id="@+id/utsavSupreme"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pizzaType4"
                />
            <RadioButton
                android:id="@+id/utsavMeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pizzaType5"
                />
        </RadioGroup>

    </HorizontalScrollView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/pizzaSizeTag"
        android:textSize="30sp"
        android:textColor="#000000"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/utsavPizzaSizeRdGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pizzaSize1"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pizzaSize2"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pizzaSize3"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pizzaSize4"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pizzaType5"
                />
        </RadioGroup>


    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/toppingsTag"
        android:textColor="#000"
        android:textSize="30sp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/utsavToppingPineapple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/topping1"
                />
            <CheckBox
                android:id="@+id/utsavToppingMushroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/topping2"/>
            <CheckBox
                android:id="@+id/utsavToppingOnion"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/topping3"/>
            <CheckBox
                android:id="@+id/utsavToppingGreenOlive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/topping4"/>
            <CheckBox
                android:id="@+id/utsavToppingSpinach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/topping5"/>

        </LinearLayout>



    </HorizontalScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#00B8D4"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pizzaTypeTag"
                    android:textSize="25sp"
                    android:layout_weight="1"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/utsavPizzaFinal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pizzaSizeTag"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/utsavSizeFinal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:layout_weight="1"
                    />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/utsavNextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/nextButton"/>

</LinearLayout>